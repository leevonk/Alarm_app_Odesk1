<?xml version="1.0" encoding="utf-8"?>
<ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ViewSwitcher"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
     android:gravity="center_vertical|center_horizontal"
    android:background="@drawable/stopwatch_gradient">
    
   
    <TextView
        android:id="@+id/txt_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="60sp" />
<TableRow 
  android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_stop"
        android:gravity="center_horizontal"
        >
    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Start" />

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Pause" />
    <Button
        android:id="@+id/btn_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Reset" />
    </TableRow>

</RelativeLayout>
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
     android:gravity="center_vertical|center_horizontal"
    android:background="@drawable/stopwatch_gradient">
    
   
    <TextView
        android:id="@+id/txt_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="60sp" />

    <EditText
        android:id="@+id/edt_minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_timer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:ems="10" />

    <Button
        android:id="@+id/btn_strt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_minutes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Start"/>
    
     <Button
        android:id="@+id/btn_stopp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_strt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Stop"/>

    </RelativeLayout>
    </ViewSwitcher>